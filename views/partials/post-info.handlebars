<!--partial for post that can be used many times-->
<article class="post">
      <div class="title">
        
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
        
        <span class="addText">{{post_text}}</span>
      </div>
       <div class="meta">
      {{user.username}} on {{format_date created_at}}
    
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
       
      </div>
    </article>