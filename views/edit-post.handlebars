

<article>
     <!--place to edit posts--> 
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="title">Title</label>
      <input name="post-title" type="text" value="{{title}}" />
      <label for="post_text">Post</label>
      <input name="post-text" type="text" value="{{post_text}}" />
    </div>

    <div>
      
      |<!--uses the helper to make comment pluralized if more than one!-->
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    </form>
    <button type="button" class="delete-post-btn">Delete post</button>
  
</article>

<!--Add comments-->
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="comment-btn">Add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>

